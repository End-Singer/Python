# 规则1：内容限定，限定只能使用：中文、英文、数字、下划线，注意：不能以数字开头
# 错误示范: 1_name = "魔理沙"
# 错误示范: name_! = "魔理沙"
name_ = "魔理沙"
_name = "魔理沙"
name_1 = "魔理沙"

# 规则2: 大小写敏感
Touhou = "东方project"
touhou = "上海爱丽丝幻乐团"
print(Touhou)
print(touhou)

# 规则3: 不可使用关键字
# 错误示范: class = "东方"
Class = "东方"

# 变量的命名规范
# 见名知意，简洁明了
name = "八云紫"
age = 17
# 多单词组合使用下划线命名法，英文字母全小写
lunatic_princess = "竹取飞翔"
